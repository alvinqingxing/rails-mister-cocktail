<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1 class="message"><%= @cocktail.name %></h1>
      <br>
      <%= cl_image_tag @cocktail.photo.key, height: 200, crop: :fill %>
      <h3 class="message">Ingredients</h3>
        <% @cocktail.doses.each do |dose| %>
          <div class="message"><%= dose.ingredient.name %>, <%= dose.amount %>
          <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
          <i class="fa fa-trash destroy_dose"></i></div>
          <% end %>
        <% end %>
      <div class="message"><%= render "doses/new", cocktail: @cocktail, dose: @dose %></div>
      <div class="message"><%= link_to "Show all ingredients", ingredients_path %></div>
      <div class="message"><%= link_to "Back to cocktails", root_path %></div>
    </div>
  </div>
</div>
